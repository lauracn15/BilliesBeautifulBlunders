<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Paint Shop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <audio controls autoplay loop>
        <source src="https://soundcloud.com/user-510570476/turn-the-colours-downbounce1">
    </audio>
    <div class="site-wrapper">
        <div class="site-wrapper-inner">
            
        <div class="masthead-clearfix">
            <div class="navbar-collapse collapse">
                <nav class="nav navbar-expand-sm navbar-dark">
                    <div class="container">
                        @Html.Partial("_LoginPartial")
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>

                        </button>
                    </div>
                    <ul class="nav masthead-nav">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Add Product", "Index", "Product", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Cart", "Index", "Cart", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("View Sales", "Index", "Sales", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    </ul>
                </nav>
            </div>
        </div>
               
        @RenderBody()
    </div>    
</div>
</body>
</html>
